{
    "name": "antonshell/featire-flags",
    "description": "Self hosted feature flags service - https://feature-flags.antonshell.me/",
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.0.0",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "composer/package-versions-deprecated": "1.11.99.*",
        "doctrine/doctrine-bundle": "^2.4",
        "doctrine/doctrine-fixtures-bundle": "^3.4",
        "doctrine/doctrine-migrations-bundle": "^3.1",
        "doctrine/orm": "^2.9",
        "fakerphp/faker": "^1.16",
        "friendsofphp/php-cs-fixer": "^3.0",
        "friendsofsymfony/rest-bundle": "^3.0",
        "jms/serializer-bundle": "^4.0",
        "sensio/framework-extra-bundle": "^6.1",
        "symfony/console": "^6.0",
        "symfony/dotenv": "^6.0",
        "symfony/flex": "^1.3.1",
        "symfony/framework-bundle": "^6.0",
        "symfony/http-kernel": "^6.0",
        "symfony/options-resolver": "^6.0",
        "symfony/proxy-manager-bridge": "^6.0",
        "symfony/requirements-checker": "^2.0",
        "symfony/runtime": "^6.0",
        "symfony/validator": "^6.0",
        "symfony/yaml": "^6.0"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "allow-plugins": {
            "symfony/flex": true,
            "symfony/runtime": true
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd",
            "requirements-checker": "script"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "test": [
            "./bin/phpunit --coverage-html coverage --coverage-clover coverage.xml"
        ],
        "init-testing-environment": [
            "./bin/console doctrine:database:drop --force --if-exists --env=test",
            "./bin/console doctrine:database:create --env=test",
            "./bin/console doctrine:migrations:migrate --no-interaction --env=test"
        ],
        "build": [
            "php bin/console doctrine:migrations:migrate --no-interaction"
        ],
        "cs-fixer": [
            "vendor/bin/php-cs-fixer fix --allow-risky=yes --using-cache=no --config .php-cs-fixer.php"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "6.0.*"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "symfony/browser-kit": "^6.0",
        "symfony/css-selector": "^6.0",
        "symfony/maker-bundle": "^1.31",
        "symfony/phpunit-bridge": "^6.0"
    }
}
